{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "web/public",
    "rewrites": [
      {
        "source": "action",
        "destination": "/action.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix ./web run render-templates"
    ],
    "postdeploy": [
      "npm --prefix ./web run cleanup-templates"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.template.*",
      "**/*.template"
    ],
    "appAssociation": "NONE",
    "headers": [
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [
          { "key": "Content-type", "value": "application/json" }
        ]
      }
    ]
  }
}
